<Window x:Class="p2_projekt.WPF.BoatPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controllers="clr-namespace:p2_projekt.WPF"
        Title="NewBoatPopup" Height="300" Width="300">

    <StackPanel>
        <controllers:InfolineControl Title="Navn" Value="{Binding Name,Mode=TwoWay}"/>
        <controllers:InfolineControl Title="Reg. nr." Value="{Binding RegistrationNumber,Mode=TwoWay}"/>
        <controllers:InfolineControl Title="Længde" Value="{Binding Length,Mode=TwoWay}"/>
        <controllers:InfolineControl Title="Bredde" Value="{Binding Width,Mode=TwoWay}"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="OK" Width="100" HorizontalAlignment="Left" Margin="5,15,10,0" Click="Submit"/>
            <Button Content="Annuller" Width="100" HorizontalAlignment="Left" Margin="5,15,10,0" Click="Cancel"/>
        </StackPanel>
    </StackPanel>
</Window>
